<div class="card-body nested-fields">

  <div class="field">
    <%= f.text_field :link %>
    <small class="form-text text-muted">This is a link to a Hyrax object that provides evidence for the event.</small>
  </div>

  <div class="field">
    <%= f.text_field :text %>
    <small class="form-text text-muted">Display text for the citation link</small>
  </div>

  <div class="field">
    <%= f.text_field :page %>
    <small class="form-text text-muted">Page number that a PDF will be opened to.</small>
  </div>
  <div>
    <%= link_to_remove_association f, class: "btn btn-danger" do %>
      <%= fa_icon "minus-circle" %>
      Remove Citation
    <% end %>
  </div>
</div>
