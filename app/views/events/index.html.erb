<div class="container-fluid">

<p id="notice"><%= notice %></p>

<h1>Events</h1>

<div class="mt-2 mb-3">
  <%= link_to 'New Event', new_event_path, class: "btn btn-success" %>
</div>

<table class="table table-hover table-sm">
  <thead>
    <tr>
      <th>Date</th>
      <th>Display date</th>
      <th>Title</th>
      <th>Description</th>
      <th>Citation link</th>
      <th>Citation page</th>
      <th>Citation description</th>
      <th>Content link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.order(:date).each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.display_date %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><a href="<%= event.citation_link %>"><%= event.citation_text %></a></td>
        <td><%= event.citation_page %></td>
        <td><%= event.citation_description %></td>
        <td><%= event.content_link %></td>
        <td><%= link_to 'Show', event, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>