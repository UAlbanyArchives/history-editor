<div class="container">

  <div class="row">

    <div class="col-xs-12 col-md-8">

      <div class="card">
        <% if @event.iiif %>
            <% if @event.representative_media %>
              <div class="uv" data-locale="en-GB:English (GB),cy-GB:Cymraeg" data-config="" data-uri="<%= @event.representative_media %>/manifest" data-collectionindex="0" data-manifestindex="0" data-sequenceindex="0" data-canvasindex="0" data-rotation="0" style="width:100%; height: 500px; background-color: #000"></div><script type="text/javascript" id="embedUV" src="https://archives.albany.edu/universalviewer/dist/uv-2.0.1/lib/embed.js"></script><script type="text/javascript">/* wordpress fix */</script>
            <% else %>
            <div class="uv" data-locale="en-GB:English (GB),cy-GB:Cymraeg" data-config="" data-uri="<%= @event.citations[0].link %>/manifest" data-collectionindex="0" data-manifestindex="0" data-sequenceindex="0" data-canvasindex="0" data-rotation="0" style="width:100%; height: 500px; background-color: #000"></div><script type="text/javascript" id="embedUV" src="https://archives.albany.edu/universalviewer/dist/uv-2.0.1/lib/embed.js"></script><script type="text/javascript">/* wordpress fix */</script>
            <% end %>
        <% elsif @event.file.present? %>
            <iframe id="pdfViewer" src=<%= @event.file %> class="embededPDF"></iframe>
        <% end %>
        
        <div class="card-body">
          <div class="d-flex w-100 justify-content-between">
            <h3 class="card-title"><%= @event.title %></h3>
            <small>
              <% if @event.display_date.present? %>
                <%= @event.display_date %>
              <% else %>
                <%= @event.date.strftime("%Y %B %d") %>
              <% end %>  
            </small>
          </div>
                    
          <p class="card-text"><%= @event.description %></p>
          
        </div>
        
        <% if @event.citation_description.present? %>
            <div class="card-body">
                <h4>Source Details</h4>
                <p class="card-text"><%= @event.citation_description %></p>
            </div>
        <% end %>

        <% if @event.subjects.present? %>
            <div class="card-body">
              <h4>Subjects</h4>
              <ul class="list-group mb-3">
                <% @event.subjects.each do |subject| %>
                  <a href="<%= subjects_path %>/<%= subject.id %>" class="list-group-item list-group-item-action list-group-item-info"><%= subject.name %></a>
                <% end %>
              </ul>
            </div>
        <% end %>

        <% if @event.citations.present? %>
            <div class="card-body container">
              
              <h4>Source Materials</h4>
              <div class="row">
                <% @event.citations.each do |cite| %>
                <div class="col-4 d-flex pb-3">
                <div class="card" style="width: 18rem; display:block">
                  <% if cite.file %>
                    <img height="150px" style="display:block;margin: auto;" src="<%= cite.file %>?file=thumbnail">
                  <% end %>
                  <div class="card-body">
                    
                    <a href="<%= cite.link %>" class="card-link"><%= cite.text %></a>
                  </div>
                </div>
                </div>
                <% end %>
              </div>

            </div>
        <% end %>
        
      </div>

    </div>

    <div class="col-xs-12 col-md-4">

        <div class="card">
          <div class="card-body">
            
            
            <% if @event.internal_note.present? %>
              <h4 class="card-title">Internal note</h4>
              <p class="card-text"><%= @event.internal_note %></p>
            <% end %>

            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <%= render 'layouts/boolean_check', check: @event.formatted_correctly %>
                <strong>Formatted correctly</strong>
              </li>
              <li class="list-group-item">
                <%= render 'layouts/boolean_check', check: @event.content_confirmed %>
                <strong>Content confirmed</strong>
              </li>
            </ul>

          </div>
        </div>

        <div>
        <div class="col-xs-12 btn-group mt-3">
            <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-info" %>
            <%= link_to 'List', events_path, class: "btn btn-outline-dark" %>
            <%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
        </div>
        <div>
        <div class="col-xs-12 btn-group mt-3">
        <a href="https://archives.albany.edu/history/catalog/<%= @event.id %>" type="button" class="btn btn-success"><i class="fa fa-globe" aria-hidden="true"></i>
 Public View</a>
        </div>
        </div>


    </div>

  </div>

</div>