<div class="container">

<p id="notice"><%= notice %></p>

<h1>Subjects</h1>

<div class="mt-2 mb-3">
<%= link_to 'New Subject', new_subject_path, class: "btn btn-success" %>
</div>

<table class="table table-hover table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.order(:name).each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= link_to 'Show', subject, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
