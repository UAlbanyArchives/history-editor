<div class="container">

<h1>Subjects</h1>

<div class="mt-2 mb-3">
<%= link_to 'New Subject', new_subject_path, class: "btn btn-success" %>
</div>

<table class="table table-hover table-sm">
  <thead>
    <tr>
      <th>Thumb</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.order(:name).each do |subject| %>
      <tr>
        <td>
          <% if subject.file %>
            <img src="<%= subject.file %>" class="img-thumbnail" />
          <% end %>
        </td>
        <td><%= subject.name %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', subject, class: "btn btn-primary" %>
            <%= link_to 'Edit', edit_subject_path(subject), class: "btn btn-info" %>
            
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
